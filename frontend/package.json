{
  "name": "create-wasm-app",
  "version": "0.1.0",
  "description": "create an app to consume rust-generated wasm packages",
  "main": "./bundle.js",
  "scripts": {
    "build": "pnpm wasm:build && webpack --mode production",
    "start": "pnpm wasm:build && webpack serve --mode development",
    "wasm:build": "wasm-pack build ./simulation-wasm --out-dir=../pkg",
    "wasm:bind": "wasm-bindgen --out-dir=./simulation --omit-default-module-path target/wasm32-unknown-unknown/debug/simulation_wasm.wasm"
  },
  "license": "MIT",
  "devDependencies": {
    "simulation-wasm": "file:./pkg",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.1.5",
    "copy-webpack-plugin": "^11.0.0"
  }
}
